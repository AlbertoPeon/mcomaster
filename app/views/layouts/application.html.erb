<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title><%= content_for?(:title) ? yield(:title) : "mcomaster" %></title>
		<meta name="description" content="<%= content_for?(:description) ? yield(:description) : "mcomaster" %>">
		<%= stylesheet_link_tag "application", :media => "all" %>
		<%= javascript_include_tag :application %>
		<%= csrf_meta_tags %>
		<%= yield(:head) %>
		<script type="text/javascript">
			MCM.remoteConfig = <%= !APP_CONFIG['client'].nil? ? APP_CONFIG['client'].to_json.html_safe : "{ }" %>;
			<% if signed_in? -%>
			MCM.currentUser = new MCM.Models.User(<%= current_user.to_json.html_safe %>);
			<% else -%>
			MCM.currentUser = null;
			<% end -%>
		</script>
	</head>
	<body class="<%= controller_name %> <%= action_name %>">
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container-fluid">
					<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<% if signed_in? -%>
					<a class="brand" href="/#/">mcomaster</a>
					<% else -%>
					<a class="brand" href="/">mcomaster</a>
					<% end -%>
					
					<div id="agentsToolbar"></div>
					<div id="collectivesToolbar"></div>
					<div id="applicationsToolbar" style="display:none;"></div>
					<ul class="nav"><li><a href="/#/log/">Logs</a></li></ul>
					<div id="loggedInBar"></div>
				</div>
			</div>
		</div>

		<div class="container-fluid">
			<div class="row-fluid">
				<% if signed_in? -%>
				<div class="span3" id="menuContent">
				<% else -%>
				<div class="span3" style="display:none;" id="menuContent">
				<% end -%>
					<div class="accordion" id="accordion2">
						<div class="accordion-group" id="applicationsList" style="display:none;"></div>
						<div class="accordion-group" id="agentsList"></div>
						<div class="accordion-group" id="collectivesList"></div>
						<div class="accordion-group" id="nodesList"></div>
					</div>
				</div>
				<% if signed_in? -%>
				<div class="span9" id="mainContent">
				<% else -%>
				<div class="span12" id="mainContent">
				<% end -%>
					<%= yield %>
				</div>
			</div>

			<hr/>

			<footer>
				<p>
					<a href="http://www.mcomaster.org/">mcomaster</a>
				</p>
			</footer>
	</body>
</html>
