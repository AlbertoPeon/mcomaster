{{#if ddl}}
<form id="actionForm" action=""> 
	<fieldset>
		{{#if hasInputs}}
		{{#key_value ddl.input}}
		<label>{{value.prompt}}</label>
		<div class="control-group">
		{{#if value.isBool}}
		<select name="{{key}}" data-ddl-type="{{value.type}}">
			<option value="false">false</option>
			<option value="true">true</option>
		</select>
		{{else}}
		<input name="{{key}}" type="text" class="text_field">
		</input>
		{{/if}}
		</div>
		<span class="help-block">{{value.description}}</span>
		{{/key_value}}
		{{else}}
		<p>This action has no parameters.</p>
		{{/if}}
	</fieldset>
</form>

{{else}}
<p>
	Receiving DDL...
</p>
{{/if}}