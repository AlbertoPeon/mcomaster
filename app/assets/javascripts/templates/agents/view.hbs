<div class="box">
<h3>{{id}} agent</h3>
</div>
<table class="table table-borderless agent-details-table" style="margin-left:30px;">
	<tbody>
		<tr>
			<td style="padding:2px;">Description</td><td style="padding:2px;">{{ddl.meta.description}}</td>
		</tr>
		<tr>
			<td style="padding:2px;">Author</td><td style="padding:2px;">{{ddl.meta.author}}</td>
		</tr>
		<tr>
			<td style="padding:2px;">Version</td><td style="padding:2px;">{{ddl.meta.version}}</td>
		</tr>
		<tr>
			<td style="padding:2px;">License</td><td style="padding:2px;">{{ddl.meta.license}}</td>
		</tr>
		<tr>
			<td style="padding:2px;">Timeout</td><td style="padding:2px;">{{ddl.meta.timeout}} seconds</td>
		</tr>
		{{#if ddl.meta.url}}
		<tr>
			<td style="padding:2px;">URL</td><td style="padding:2px;"><a href="{{ddl.meta.url}}">{{ddl.meta.url}}</a></td>
		</tr>
		{{/if}}
	</tbody>
</table>
<table class="table table-striped table-bordered"
<thead>
<tr><th>Action</th><th>Description</th></tr>
</thead>
<tbody>
	{{#key_value ddl.actions}}
	<tr>
		<td><a href="/#/action/{{../id}}/{{key}}">{{key}}</a></td><td>{{value.description}}</td>
	</tr>
	{{/key_value}}
</tbody>
</table>
